<%- include('partials/head') %>
<%- include('partials/sidebar') %>
<%- include('partials/topbar') %>

<div class="content">
  <h1 class="page-title"> List Pages </h1>

  <div class="table-wrap">
    <table class="orders-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Slug</th>
          <th>Date Created</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% pages.forEach(p => { %>
          <tr>
            <td><%= p.id %></td>
            <td><%= p.title %></td>
            <td><%= p.slug %></td>
            <td><%= p.date %></td>
            <td>
              <span class="badge <%= (p.status || 'draft').toLowerCase() %>">
                <%= p.status %>
              </span>
            </td>
            <td>
              <a href="/pages/edit/<%= p.id %>" class="btn-small">Edit</a>
              <form action="/pages/delete/<%= p.id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn-small danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<script src="/js/dashboard.js" defer></script>
<%- include('partials/footer') %>
